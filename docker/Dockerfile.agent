# mcpdrill/agent â€” server-side telemetry agent (CPU/memory/process monitoring)
# Build: docker build -f docker/Dockerfile.agent -t mcpdrill/agent:latest .
# Run:   docker run --pid=host --network=host mcpdrill/agent:latest ...
#
# Requires pid:host for host process monitoring via /proc.
# Typically run as bare binary outside Docker in production.

FROM golang:1.24-alpine AS builder
WORKDIR /build
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -buildvcs=false -ldflags="-s -w" -o /build/bin/mcpdrill-agent ./cmd/agent

FROM alpine:3.21
RUN apk add --no-cache ca-certificates tzdata
COPY --from=builder /build/bin/mcpdrill-agent /usr/local/bin/mcpdrill-agent
ENTRYPOINT ["mcpdrill-agent"]
CMD ["--control-plane-url", "http://control-plane:8080"]
