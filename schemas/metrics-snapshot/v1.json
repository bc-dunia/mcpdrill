{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mcpdrill.local/schemas/metrics-snapshot/v1.json",
  "title": "MetricsSnapshot (metrics-snapshot/v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "run_id", "generated_at_ms", "windows", "series"],
  "properties": {
    "schema_version": {"type": "string", "const": "metrics-snapshot/v1"},
    "run_id": {"type": "string", "minLength": 1, "maxLength": 128},
    "generated_at_ms": {"type": "integer", "minimum": 0},
    "windows": {
      "type": "array",
      "minItems": 1,
      "maxItems": 50,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["window_ms"],
        "properties": {
          "window_ms": {"type": "integer", "minimum": 1000, "maximum": 3600000}
        }
      }
    },
    "series": {
      "type": "array",
      "minItems": 0,
      "maxItems": 200000,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["ts_ms", "name", "type", "labels", "value"],
        "properties": {
          "ts_ms": {"type": "integer", "minimum": 0},
          "name": {"type": "string", "minLength": 1, "maxLength": 200},
          "type": {"type": "string", "enum": ["counter", "gauge", "histogram"]},
          "labels": {"type": "object", "additionalProperties": {"type": "string", "maxLength": 200}, "maxProperties": 32},
          "value": {}
        }
      }
    }
  }
}
