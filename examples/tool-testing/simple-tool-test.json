{
  "scenario_id": "simple-tool-test",
  "target": {
    "kind": "server",
    "url": "http://localhost:3000",
    "transport": "streamable_http",
    "timeout_ms": 30000
  },
  "stages": [
    {
      "stage_id": "stg_0000000000000001",
      "stage": "preflight",
      "enabled": true,
      "duration_ms": 5000,
      "load": {
        "target_vus": 1
      }
    },
    {
      "stage_id": "stg_0000000000000002",
      "stage": "ramp",
      "enabled": true,
      "duration_ms": 30000,
      "load": {
        "target_vus": 10
      },
      "stop_conditions": [
        {
          "metric": "error_rate",
          "threshold": 0.05,
          "window_ms": 10000
        }
      ]
    }
  ],
  "workload": {
    "op_mix": [
      {
        "operation": "tools/list",
        "weight": 1
      },
      {
        "operation": "tools/call",
        "weight": 10,
        "tool_name": "validate_email",
        "arguments": {
          "email": "test@example.com"
        }
      }
    ],
    "think_time": {
      "base_ms": 100,
      "jitter_ms": 50
    }
  },
  "session_policy": {
    "mode": "reuse"
  },
  "safety": {
    "hard_caps": {
      "max_vus": 50,
      "max_duration_ms": 60000,
      "max_errors": 100
    }
  }
}
